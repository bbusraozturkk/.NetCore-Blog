@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 class="my-4 text-center text-primary">Yazarın Blogları</h1>

<div class="mb-3 text-end">
    <a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>
</div>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Blog Başlığı</th>
            <th>Oluşturma Tarihi</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogID</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogCreateDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    @if (item.BlogStatus)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger btn-sm">Sil</a>
                </td>
                <td>
                    <a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
